<%= simple_form_for(@lugar, :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :tipo %>
    <%= f.association :municipio %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
