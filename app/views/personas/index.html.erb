<% @personas.each do |persona| %>
  <tr>
    <td><%= persona.nombre %></td>
    <td><%= persona.apellido %></td>
    <td><%= persona.cedula %></td>
    <td><%= persona.lugar_nacimiento %></td>
    <td><%= persona.fecha_nacimiento %></td>
    <td><%= persona.escolaridad %></td>
    <td><%= persona.ocupacion %></td>
    <td><%= persona.estado_civil %></td>
    <td><%= persona.discapacidad %></td>
    <td><%= persona.reincidente %></td>
    <td><%= persona.incidentes %></td>
    <td><%= persona.hijos %></td>
    <td><%= persona.hijas %></td>
    <td><%= persona.casa %></td>
    <td><%= persona.ingreso_promedio %></td>
    <td><%= persona.jafatura_hogar %></td>
    <td><%= link_to 'Show', persona %></td>
    <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
    <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

